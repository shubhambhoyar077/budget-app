<% content_for :back_path, new_user_session_path %>
<% content_for :page_name, "Forgot Password?" %>

<% content_for :nav_button do %>
  <%= button_tag "Send", type: "submit", form: "new_user", class: "nav-link text-white" %>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-field border-0 border-bottom", placeholder: "Email" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
