<div class="card" style="max-height: 189px; border: none; padding: 1rem;">
  <div class="row g-0 h-100">
    <div class="col-4 col-md-4">
    <%= image_tag category.icon, alt: "#{category.name} icon", class: "img-fluid rounded-start h-70 icon"%>
    </div>
    <div class="col-8 col-md-8 d-flex flex-column justify-content-between", style="padding-left: 0.5rem;">
      <div>
        <div class="d-flex justify-content-between">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text proxima-bold ">$<%=category.products.sum {|product| product[:amount]}%></p>
        </div>
      </div>
      <div class="mt-auto">
        <p class="card-text"><%=category.created_at.strftime('%d %b %Y')%></p>
      </div>
    </div>
  </div>
</div>